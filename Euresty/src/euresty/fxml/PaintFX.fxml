<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="euresty.fxml.PaintFXController">
    <stylesheets>
        <URL value="@paintfx.css"/>
    </stylesheets>
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Archivo">
                    <MenuItem fx:id="saveBtn" text="Guardar"/>
                </Menu>
            </MenuBar>
            <ToolBar>
                <HBox alignment="CENTER" spacing="5">
                    <ImageView fx:id="pencilBtn" fitHeight="20.0" fitWidth="20.0">
                        <image>
                            <Image url="images/pencil.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="textBtn" fitHeight="20.0" fitWidth="20.0">
                        <image>
                            <Image url="images/A.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="fillBtn" fitHeight="20.0" fitWidth="20.0">
                           <image>
                            <Image url="images/fill.png" />
                        </image>
                    </ImageView>
                    <ColorPicker fx:id="colorPicker" />
                    <Label fx:id="activeActionL"></Label>
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <Canvas fx:id="canvas" width="600" height="600" style="-fx-background: #FFFFFF;"/>
    </center> 
</BorderPane>
