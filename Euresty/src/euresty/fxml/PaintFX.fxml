<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="700.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="euresty.fxml.PaintFXController">
    <stylesheets>
        <URL value="@paintfx.css"/>
    </stylesheets>
    <top>
        <VBox>
            <MenuBar>
                <Menu text="Archivo">
                    <MenuItem fx:id="newBtn" text="Nuevo"/>
                    <MenuItem fx:id="saveBtn" text="Guardar"/>
                    <MenuItem fx:id="openBtn" text="Abrir"/>
                    <MenuItem fx:id="exitBtn" text="Salir"/>
                </Menu>
            </MenuBar>
            <ToolBar>
                <HBox alignment="CENTER" spacing="5">
                    <ImageView fx:id="pencilBtn" fitHeight="20.0" fitWidth="20.0">
                        <image>
                            <Image url="images/pencil.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="textBtn" fitHeight="20.0" fitWidth="20.0">
                        <image>
                            <Image url="images/A.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="fillBtn" fitHeight="20.0" fitWidth="20.0">
                           <image>
                            <Image url="images/fill.png" />
                        </image>
                    </ImageView>
                     <ImageView fx:id="eraseBtn" fitHeight="20.0" fitWidth="20.0">
                           <image>
                            <Image url="images/eraser.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="pincelBtn" fitHeight="20.0" fitWidth="20.0">
                           <image>
                            <Image url="images/pincel.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="calligraphicBrush1Btn" fitHeight="20.0" fitWidth="20.0">
                           <image>
                            <Image url="images/calligraphicBrush1.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="calligraphicBrush2Btn" fitHeight="20.0" fitWidth="20.0">
                           <image>
                            <Image url="images/calligraphicBrush2.png" />
                        </image>
                    </ImageView>
                    <ImageView fx:id="airbrushBtn" fitHeight="20.0" fitWidth="20.0">
                           <image>
                            <Image url="images/airbrush.png" />
                        </image>
                    </ImageView>
                    <ComboBox fx:id="comboFont" prefWidth="150" prefHeight="10"/>
                    <ComboBox fx:id="comboSize" prefWidth="120" prefHeight="10"/>
                    <ColorPicker fx:id="colorPicker"/>
                    <Label fx:id="activeActionL"></Label>
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <Canvas fx:id="canvas" width="700" height="700" style="-fx-background: #FFFFFF;"/>
    </center> 
</BorderPane>
